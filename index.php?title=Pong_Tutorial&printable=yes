<span class="co1">// Called every frame</span>
<span class="kw4">void</span> APaddle<span class="sy4">::</span><span class="me2">Tick</span><span class="br0">&#40;</span> <span class="kw4">float</span> DeltaTime <span class="br0">&#41;</span>
