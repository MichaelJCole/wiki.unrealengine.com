	Sprite<span class="sy2">-</span><span class="sy1">&gt;</span>SetSprite<span class="br0">&#40;</span> BackgroundSpriteRef.<span class="me1">Object</span> <span class="br0">&#41;</span><span class="sy4">;</span>
