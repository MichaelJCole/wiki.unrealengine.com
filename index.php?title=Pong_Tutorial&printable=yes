				CurrentState <span class="sy1">=</span> PONG_STATES<span class="sy4">::</span><span class="me2">RESET</span><span class="sy4">;</span>
			<span class="br0">&#125;</span>
			<span class="kw1">break</span><span class="sy4">;</span>
