	ProjClass[0] = AUTProj_FlakShardMain::StaticClass();
	ProjClass[1] = AUTProj_FlakShell::StaticClass();

	FireInterval.SetNumZeroed(2);
	FireInterval[0] = 1.1;
	FireInterval[1] = 1.1;

