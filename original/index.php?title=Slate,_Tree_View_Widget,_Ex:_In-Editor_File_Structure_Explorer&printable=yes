	<span class="coMULTI">/** Rebuilds the category tree from scratch */</span>
	<span class="kw4">void</span> RebuildFileTree<span class="br0">&#40;</span><span class="br0">&#41;</span><span class="sy4">;</span>
&#160;
	<span class="coMULTI">/** SWidget overrides */</span>
	<span class="kw2">virtual</span> <span class="kw4">void</span> Tick<span class="br0">&#40;</span> <span class="kw4">const</span> FGeometry<span class="sy3">&amp;</span> AllottedGeometry, <span class="kw4">const</span> <span class="kw4">double</span> InCurrentTime, <span class="kw4">const</span> <span class="kw4">float</span> InDeltaTime <span class="br0">&#41;</span> OVERRIDE<span class="sy4">;</span>
&#160;
&#160;
