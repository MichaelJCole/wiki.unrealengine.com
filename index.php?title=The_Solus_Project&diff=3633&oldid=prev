&#160;
	<span class="co1">//UE_LOG(YourLog,Error,TEXT(&quot;STREAMING LEVEL BEGIN PLAY&#160;%s&quot;), *GetName());</span>
<span class="br0">&#125;</span>
&#160;
&#160;
&#160;
<span class="co1">//~~~~~~~~~~~~~~~~~~~~~~~~~~~~</span>
<span class="co1">//		 			Solus Level End Play</span>
<span class="co1">//~~~~~~~~~~~~~~~~~~~~~~~~~~~~</span>
