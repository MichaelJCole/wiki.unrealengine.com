<span class="kw4">void</span> ASolusLevelScriptActor<span class="sy4">::</span><span class="me2">OnRemoveFromWorld</span><span class="br0">&#40;</span><span class="br0">&#41;</span>
<span class="br0">&#123;</span>
&#160;
	<span class="coMULTI">/*
	UE_LOG(YourLog,Error,TEXT(&quot;STREAMING LEVEL UNSTREAMED (name should not be none)&#160;%s&quot;), *GetName());
	UE_LOG(YourLog,Error,TEXT(&quot;Victory!!!&quot;));
	UE_LOG(YourLog,Error,TEXT(&quot;RUN ALL UNSTREAMING LEVEL LOGIC HERE&quot;));
	*/</span>
