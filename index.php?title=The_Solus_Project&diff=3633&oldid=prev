	<span class="co1">//Save Level Just Before Exiting</span>
	SolusLevel__UpdateLevelSaveData<span class="br0">&#40;</span><span class="br0">&#41;</span><span class="sy4">;</span>
&#160;
&#160;
	Super<span class="sy4">::</span><span class="me2">OnRemoveFromWorld</span><span class="br0">&#40;</span><span class="br0">&#41;</span><span class="sy4">;</span>
	<span class="co1">//~~~~~~~~~~</span>
<span class="br0">&#125;</span>
&#160;
<span class="kw4">void</span> ASolusLevelScriptActor<span class="sy4">::</span><span class="me2">SolusLevel__UpdateLevelSaveData</span><span class="br0">&#40;</span><span class="br0">&#41;</span>
<span class="br0">&#123;</span>
	GET_SOLUS_PC
&#160;
	<span class="kw1">if</span><span class="br0">&#40;</span>SolusLevelName <span class="sy1">==</span> NAME_None<span class="br0">&#41;</span> <span class="kw1">return</span><span class="sy4">;</span>
	<span class="co1">//~~~~~~~~~~~~~~~~~~~~~~~</span>
&#160;
	SolusPC<span class="sy2">-</span><span class="sy1">&gt;</span>SolusSaveLevel<span class="br0">&#40;</span>SolusLevelVibes,SolusLevelName.<span class="me1">ToString</span><span class="br0">&#40;</span><span class="br0">&#41;</span><span class="br0">&#41;</span><span class="sy4">;</span>
